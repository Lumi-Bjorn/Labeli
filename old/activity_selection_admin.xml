<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
	    android:id="@+id/textViewLocalState"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/gestion_button"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="18dp"
	    android:text="@string/text_welcome"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />
	
	<TextView
	    android:id="@+id/textViewCanettesDisponibles"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/scan_button"
	    android:layout_marginLeft="24dp"
	    android:layout_marginTop="36dp"
	    android:text="@string/text_produits_disponibles"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
	    android:id="@+id/local_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/textViewCanettesDisponibles"
	    android:layout_marginLeft="16dp"
	    android:layout_toRightOf="@+id/scan_button"
	    android:onClick="gererLocal"
	    android:text="@string/button_local" />

	<Button
	    android:id="@+id/gestion_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/textViewCanettesDisponibles"
	    android:layout_alignLeft="@+id/textViewCanettesDisponibles"
	    android:onClick="gerer"
	    android:text="@string/button_gestion" />

	<Button
	    android:id="@+id/scan_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="113dp"
	    android:text="@string/button_scan" />

</RelativeLayout>